<table cellpadding="0" cellspacing="0" class="prereq_table">
  <% for spell_reagent in spell_reagents -%>
    <tr class="<%= cycle('odd', 'even') %>">
      <td class="icon"><%= link_to image_tag(spell_reagent.icon.url, :alt => spell_reagent.name), polymorphic_path(spell_reagent), :class => 'info_popup' %></td>
      <td><%= link_to spell_reagent.name, polymorphic_path(spell_reagent) %></td>
      <td class="qty"><%= spell_reagent.qty %></td>
    </tr>
  <% end -%>
</table>