<% Prereq.get_prereable_by_type_hash(objekt).each do |type, items| -%>
  <h4 style="margin-bottom: 2px;"><%= Prereq.prereq_types[type].capitalize %></h4>
  <table cellpadding="0" cellspacing="0" class="prereq_table">
    <% for item in items -%>
      <tr class="<%= cycle('odd', 'even') %>">
        <% if item.need.is_a? Item -%>
          <td class="icon"><%= link_to(image_tag(item.need.icon.url, :alt => item.need.name), polymorphic_path(item.need), :class => 'info_popup' ) %></td>
        <% else %>
          <td class="icon"><%= link_to(image_tag(item.need.icon.url, :alt => item.need.name), polymorphic_path(item.need) ) %></td>
        <% end %>
        <td><%= link_to item.need.name, polymorphic_path(item.need) %></td>
        <td class="qty"><%= item.qty %></td>
      </tr>
    <% end -%>
  </table>
<% end -%>