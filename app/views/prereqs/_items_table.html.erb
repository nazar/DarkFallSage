<table cellpadding="0" cellspacing="0" class="prereq_table">
  <% for item in items -%>
    <tr class="<%= cycle('odd', 'even') %>">
      <td class="icon"><%= link_to image_tag(item.prereqable.icon.url, :alt => item.prereqable.name), polymorphic_path(item.prereqable), :class => 'info_popup' %></td>
      <td><%= link_to item.prereqable.name, polymorphic_path(item.prereqable) %></td>
      <td class="qty"><%= item.qty %></td>
    </tr>
  <% end -%>
</table>