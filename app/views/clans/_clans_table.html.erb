<% unless clans.blank? -%>
  <table id="<%= table_id ||= 'clans_list' %>" cellpadding="0" cellspacing="0" class="sortable">
    <tr class="head">
      <th class="sortfirstasc">Name</th>
      <th>Server</th>
      <th>Membership Type</th>
      <th>Members</th>
    </tr>
    <% for clan in clans -%>
      <tr>
        <td class="title"><%= link_to h(clan.name), clan_path(clan) %></td>
        <td class="info"><%= clan.server_to_s %></td>
        <td class="info"><%= clan.access_type_to_s %></td>
        <td class="info"><%= clan.members_count %></td>
      </tr>
    <% end -%>
  </table>
  <%= javascript_tag("SortableTable.init('#{table_id}');") %>
<% end -%>