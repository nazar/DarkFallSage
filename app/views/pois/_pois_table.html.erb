<% unless pois.blank? -%>
  <table id="<%= table_id ||= 'pois_list' %>" cellpadding="0" cellspacing="0" class="sortable">
    <tr class="head">
      <th class="sortfirstasc">Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Images</th>
      <th>Locs</th>
      <th>Topics</th>
      <th>Posts</th>
    </tr>
    <% for poi in pois -%>
      <tr>
        <td class="title"><%= link_to poi.name, poi_path(poi) %></td>
        <td class="description"><%= strip_tags(truncate(poi.description, (trunc ||= 80))) %></td>
        <td><%= poi.poi_type_to_s.humanize %></td>
        <td class="info number"><%= poi.images_count %></td>
        <td class="info number"><%= poi.markers_count %></td>
        <td class="info number"><%= poi.topics_count %></td>
        <td class="info number"><%= poi.posts_count %></td>
      </tr>
    <% end -%>
  </table>
  <%= javascript_tag("SortableTable.init('#{table_id}');") %>
<% end -%>