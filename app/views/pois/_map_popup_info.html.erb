<div id="popup_item_info">
  <table cellpadding="0" cellspacing="0">
    <tr class="head">
      <td valign="middle">
        <% if @can_vote -%>
          <%= render :partial => 'votes/vote_block', :locals => {:voteable => @marker,
                                                                 :voted_for => @voted_for, :voted_against => @voted_against,
                                                                 :votes_for => @votes_for, :votes_against => @votes_against} %>
        <% end -%>
        <h3 class="title"><%= link_to @poi.name, poi_path(@poi) %></h3>
        <div class="small">added by: <%= link_to @marker.user.login, profile_path(@marker.user.login) %></div>
      </td>
    </tr>
    <tr class="even"><td><%= format_red_cloth(truncate(@poi.description, 200)) %></td></tr>
  </table>
</div>