<% content_block('Creating a New Forum') do %>
  <%= error_messages_for :forum %>
  <% form_for :forum, :url => {:action => 'create'}, :html => {:class => 'form_layout'} do |f| -%>
    <%= render :partial => 'clan_forums/form', :locals => {:f => f} %>
    <%= f.submit 'Create Forum' %>
  <% end -%>  
<% end -%>