<div id="popup_item_info">
  <table cellpadding="0" cellspacing="0">
    <tr><td align="center"><strong><%= link_to @item.name, item_path(@item) %></strong></td></tr>
    <tr><td align="center" ><%= image_tag @item.image.url, :width => '128px', :height => '128px' %></td></tr>
    <tr><td><%= format_red_cloth(@item.description) %></td></tr>
    <tr><td><%= render :partial => 'items/item_properties_table' %></td></tr>
  </table>
</div>