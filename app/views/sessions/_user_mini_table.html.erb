<table id="<%= table_id ||= 'top_rep_mini_list' %>" cellpadding="0" cellspacing="0" class="sortable">
  <tr class="head">
    <th>Name</th>
    <th class="sortfirstdesc number" title="Reputation">Rep</th>
  </tr>
  <tr>
    <% for user in users -%>
     <tr>
       <td><%= link_to h(user.name), profile_path(user.login) %></td>
       <td><%= user.counter.reputation %></td>
     </tr>
    <% end -%>
  </tr>
</table>
<%= javascript_tag("SortableTable.init('#{table_id}');") %>